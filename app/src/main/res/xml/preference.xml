<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="service_category"
        app:title="Service" >

        <SwitchPreference
            app:key="service"
            android:title="Run in Foreground"
            android:defaultValue="true"
            app:summary="@string/switch_prefence_summary"/>

        <ListPreference
            app:key="notification_list"
            app:title="Popup Dictionary Notification"
            android:defaultValue="null"
            android:entries="@array/notification"
            android:entryValues="@array/notificationValues"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>